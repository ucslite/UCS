													<c:forEach var = "catEntry" items = "${globalresults}" varStatus = "status"><c:if test="${!empty contentPositions}">
															<c:remove var="displayContentName"/>
															<c:forEach var="contentPosition" items="${contentPositions}" varStatus="aStatusLoop">
