													<c:set var="linkId" value="WC_SearchBasedNavigationResults_pagination_link_grid_${linkPrefix}"/>
													<a alt="<fmt:message key='PC_SWITCH_TO_GRID_VIEW' bundle='${widgetText}'/>" role="button" class="grid_icon" id="${linkId}" href='javascript:dojo.publish("${otherViewsEventName}",[{pageView:"grid",linkId:"${linkId}",enableSKUListView:"${enableSKUListView}"}])' title="<fmt:message key='PC_SWITCH_TO_GRID_VIEW' bundle='${widgetText}'/>"></a>
